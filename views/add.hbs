<div class="phone-list">
    {{#if block}}
        {{#each phones}}
            {{>button-dis name=name phone=phone}}
        {{/each}}
    {{else}}
        {{#each phones}}
            {{>button-act name=name phone=phone}}
        {{/each}}
    {{/if}}


</div>
<br>
<form method="post" action="/add">
    <div class="form-group">
        <label for="fio">ФИО</label>
        <input type="text" class="form-control" id="fio" name="fio" placeholder="ФИО">
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="number" class="form-control" id="phone" name="phone" placeholder="Номер телефона">
    </div>
    <div class="btn-area">
        <button type="submit" class="btn btn-primary">Добавить</button>
        {{{cancel}}}
    </div>

</form>